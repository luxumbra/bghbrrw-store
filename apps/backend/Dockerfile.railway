# Railway-specific Dockerfile for backend only
FROM node:20-alpine

# Install pnpm
RUN npm install -g pnpm@latest

WORKDIR /app

# Copy backend package.json
COPY package.json ./

# Install backend dependencies (no lockfile since it's not a workspace)
RUN pnpm install

# Copy backend source code
COPY . .

# Build the backend
RUN pnpm run build

# Expose port
EXPOSE 9000

# Start the backend
CMD ["pnpm", "run", "start"]